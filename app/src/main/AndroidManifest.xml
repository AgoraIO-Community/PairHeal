<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prapps.pairheal">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".utils.AppController"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.SignupActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.LoginActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.NewGoalActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.ManageGoalsActivity" android:screenOrientation="portrait" />
        <activity android:name=".activity.CallTwinActivity" android:screenOrientation="portrait" />
    </application>

</manifest>